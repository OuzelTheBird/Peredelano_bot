docker run -e RUN_LOCAL=true \
           -e DISABLE_ERRORS=true \
           -e LOG_LEVEL=WARN \
           -e VALIDATE_ALL_CODEBASE=false \
           -e IGNORE_GITIGNORED_FILES=true \
           -e VALIDATE_GITLEAKS=true \
           -e VALIDATE_GITHUB_ACTIONS=true \
           -e VALIDATE_MARKDOWN=true \
           -e VALIDATE_DOCKERFILE_HADOLINT=true \
           -e DOCKERFILE_HADOLINT_FILE_NAME=.hadolint.yaml \
           -v ./:/tmp/lint \
           -e VALIDATE_PYTHON_PYLINT=true \
           -e PYTHON_PYLINT_CONFIG_FILE=.pylintrc \
           -v ./.pylintrc:/action/lib/.automation/.pylintrc \
           -e VALIDATE_YAML=true \
           -e YAML_CONFIG_FILE=.yamllint.yml \
           -v ./.yamllint.yml:/action/lib/.automation/.yamllint.yml \
           --rm github/super-linter

